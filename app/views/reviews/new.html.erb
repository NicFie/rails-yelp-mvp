<h1 class="text-center my-4">New review</h1>

<h2 class="text-center"><%= @restaurant.name %></h2>
<div class="container">
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Add review", class: 'btn btn-primary'%>
  <% end %>
</div>
